{
  "name": "portfolio-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npm run validate:env && next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "vercel-build": "npm run validate:env && next build",
    "type-check": "tsc --noEmit",
    "validate:env": "tsx scripts/validate-env.ts",
    "prebuild": "npm run validate:env",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "analyze": "ANALYZE=true next build",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "pre-commit": "npm run lint && npm run type-check && npm run validate:env && npm run test:run"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@next/third-parties": "^15.5.2",
    "@types/nodemailer": "^7.0.1",
    "@upstash/ratelimit": "^2.0.7",
    "@upstash/redis": "^1.36.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.1.0",
    "lucide-react": "^0.542.0",
    "next": "^15.5.9",
    "nodemailer": "^7.0.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-hook-form": "^7.54.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^16.1.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.1.2",
    "dotenv": "^17.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "jsdom": "^27.4.0",
    "tailwindcss": "^4",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "vitest": "^4.0.16"
  }
}
